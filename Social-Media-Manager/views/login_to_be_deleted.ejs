<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
  <title>Register</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- fonts for the page -->
  <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet'>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
  <!-- Styling all cards and containers used on the page-->
  <link rel="stylesheet" href="stylesheets/general.css">
  <!-- Styling all buttons and input boxes used on the page-->
  <link rel="stylesheet" href="stylesheets/buttonsinputs.css">
  <!-- Styling all headers and text used on the page-->
  <link rel="stylesheet" href="stylesheets/headerstext.css">
  <!-- Styling all cards and containers used on the page-->
  <link rel="stylesheet" href="stylesheets/cardsContainers.css">
</head>
<body class = "text-center auth">
  <h1 class="cover-heading">TITLE</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>


    <!-- LOGIN FORM -->
    <form action="/login" method="post" class = "form-signin">
      <label class="sr-only" >Email</label>
      <input class="form-control user-field" placeholder="Email" type="text" name = "email">
      <label class="sr-only" >Password</label>
      <input class="form-control password-field" placeholder="Password"  type="password" name = "password">
      <br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>

    <hr>

    <p>Need an account? <a class = "links" href="/signup">Signup</a></p>
    <p>Or go <a class = "links" href="/">back</a></p>

</body>
</html>
