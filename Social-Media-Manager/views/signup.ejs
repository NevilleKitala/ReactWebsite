<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="stylesheets/style.css"> <!-- my own stylesheet-->
</head>
<body class = "text-center auth">
  <h1 class="cover-heading">TITLE</h1>
  <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
  <% } %>

  <!-- LOGIN FORM -->
  <form action="/signup" method="post" class = "form-signin">
    <label class="sr-only" >Username</label>
    <input class="form-control user-field" placeholder="Username" type="text" name = "name">
    <label class="sr-only" >Email</label>
    <input class="form-control user-field" placeholder="Email" type="text" name = "email">
    <label class="sr-only" >Password</label>
    <input class="form-control password-field" placeholder="Password"  type="password" name = "password">
    <br>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
  </form>

  <hr>

    <p>Already have an account? <a class = "links" href="/login">Login</a></p>
    <p>Or go <a class = "links" href="/">back</a></p>

</div>

</div>
</body>
</html>
